[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/base]
#dpi = 144
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 35
radius = 0
fixed-center = false
#bottom = true

background = #ee222222
#background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 2
padding = 1
module-margin = 1

font-0 = "SF Mono:size=10:antialias=true;1"
font-1 = "SF Mono:size=10:antialias=true;1"
font-2 = "Noto Sans Symbols:size=10;1"
font-3 = "Noto Sans Symbols2:size=10;1"
font-4 = Noto Sans CJK JP:size=10:antialias=true;0

modules-left = date bspwm xwindow
modules-center =
modules-right = pulseaudio-control xkeyboard eth wlan battery cpu memory powermenu

tray-position = ${env:TRAY_POS}
tray-padding = 2
tray-maxsize = 24

wm-restack = bspwm

[bar/small]
inherit = bar/base
modules-left = date bspwm xwindow-small
modules-right = pulseaudio-control-small xkeyboard battery cpu memory powermenu

[bar/large]
inherit = bar/base

[global/wm]
margin-top = 0

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

format-prefix = BAT

label-charging = 🗲 ↑ %percentage%%
label-charging-underline = #66f
label-discharging = 🗲 ↓ %percentage%%
label-discharging-underline = #66f
label-full = 🗲 Full
label-full-underline = #66f

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/xwindow-small]
inherit = module/xwindow
label = %title:0:35:...%

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
enable-click = true
enable-scroll = true

label-focused = " %name% "
label-focused-background = #333
label-focused-underline = #fba922

label-occupied = " %name% "
label-occupied-foreground = #ffaa00

label-urgent = " %name% "
label-urgent-underline = #9b0a20

label-empty = " %name% "
label-empty-foreground = #555555

[module/xkeyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock
format = <label-layout>
format-prefix = "⌨ "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #009900

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "💻 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "🗍 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used:2%%

[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/pulseaudio]
type = internal/pulseaudio

;format-volume = <label-volume> <bar-volume>
