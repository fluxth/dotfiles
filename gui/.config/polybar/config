label-volume = 🔊 %percentage%%
label-volume-foreground = ${root.foreground-alt}

label-muted = 🔇 muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/pulseaudio-control]
type = custom/script
tail = true
format-underline = #666
label-foreground = ${colors.foreground}

# Options: https://github.com/marioortizmanero/polybar-pulseaudio-control
# --sink-nickname "alsa_output.pci-0000_26_00.1.hdmi-stereo-extra1:· HDMI" 
exec = pulseaudio-control --volume-max 100 --icons-volume "🔈,🔉,🔊" --icon-muted "🔇" --sink-nicknames-from "alsa.name" --format '$VOL_ICON ${VOL_LEVEL}% · $SINK_NICKNAME' --sink-nickname "alsa_output.pci-0000_26_00.1.hdmi-stereo-extra1:HDMI" --sink-nickname "alsa_output.usb-Focusrite_Scarlett_Solo_USB_Y741RVG940863D-00.analog-stereo:Monitors" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control next-sink
scroll-up = pulseaudio-control --volume-step 5 --volume-max 130 up
scroll-down = pulseaudio-control --volume-step 5 --volume-max 130 down

[module/pulseaudio-control-small]
inherit = module/pulseaudio-control

exec = pulseaudio-control --volume-max 100 --icons-volume "🔈,🔉,🔊" --icon-muted "🔇" --format '$VOL_ICON ${VOL_LEVEL}%' listen

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

label-disconnected =

ramp-signal-0 = 🌧
ramp-signal-1 = 🌦
ramp-signal-2 = 🌥
ramp-signal-3 = 🌤
ramp-signal-4 = 🌣

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

format-connected-underline = #7033ff
format-connected-prefix = "🖧 "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = ⏻
label-open-foreground = ${colors.secondary}
label-close = cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = suspend
menu-0-0-exec = menu-open-3
menu-0-1 = reboot
menu-0-1-exec = menu-open-1
menu-0-2 = power off
menu-0-2-exec = menu-open-2

menu-1-0 = REBOOT
menu-1-0-exec = systemctl reboot

menu-2-0 = POWER OFF
menu-2-0-exec = systemctl poweroff

menu-3-0 = SUSPEND
menu-3-0-exec = systemctl suspend

[module/date]
type = internal/date
interval = 5

date = "%a %b %d"
date-alt = %a %d

time = %I:%M %p
time-alt = %I:%M

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[settings]
screenchange-reload = true

