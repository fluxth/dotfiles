syntax on

set nocompatible
set secure

set encoding=utf-8
set noswapfile
set nobackup
set number
set relativenumber
set shortmess+=c

filetype plugin indent on
set autoindent
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab

set splitright
set splitbelow

set updatetime=300
set timeoutlen=1000

set mouse=a
